@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<h1>Create New Role</h1>

<div class="row">
    <div class="col-md-12 card-body p-4">
        <form asp-action="CreateRole" method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group form-floating py-2 col-12">
                    <label asp-for="RoleName" class="ms-2"></label>
                    <input asp-for="RoleName" class="form-control border-0 shadow" placeholder="Name" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="form-group row py-2 col-12">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary col-6 col-md-3" style="width:auto">
                            Create Role
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
