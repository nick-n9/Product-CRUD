@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

<div class="row">
    <div class="col-md-12 card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group form-floating py-2 col-12">
                    <input type="hidden" asp-for="Id" />
                    <label asp-for="Id" class="ms-2"></label>
                    <input asp-for="Id" disabled class="form-control border-0 shadow" />
                </div>

                <div class="form-group form-floating py-2 col-12">
                    <label asp-for="RoleName" class="ms-2"></label>
                    <input asp-for="RoleName" class="form-control border-0 shadow" placeholder="Role Name" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="form-group row py-2 col-12">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary col-6 col-md-3" style="width:auto">
                            Update
                        </button>
                        <a asp-action="ListRoles" class="btn btn-secondary col-6 col-md-3" style="width:auto">
                            Cancel
                        </a>
                    </div>
                </div>

                <br />

                <div class="card">
                    <div class="card-header">
                        <h3>Users in this role</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Users != null && Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Administration" asp-action="EditUsersInRole"
                           asp-route-roleId="@Model.Id" class="btn btn-primary col-6 col-md-3" style="width:auto">
                            Add or Remove Users From This Role
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
