@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

<h1>User Login</h1>

<div class="row">
    <div class="col-md-12 card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group form-floating py-2 col-12">
                    <label asp-for="Email" class="ms-2"></label>
                    <input asp-for="Email" class="form-control border-0 shadow" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group form-floating py-2 col-12">
                    <label asp-for="Password" class="ms-2"></label>
                    <input asp-for="Password" class="form-control border-0 shadow" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-floating py-2 col-12">
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="ms-2">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary col-6 col-md-3" >Login</button>
            </div>
        </form>
    </div>
</div>